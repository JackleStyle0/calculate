                    android:layout_weight="0.3"
                    android:text="@string/bath"
                    android:textSize="@dimen/default_text_body_normal" />

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp" />


            <Button style="@style/style_button_save" />
        </LinearLayout>

        <LinearLayout
            style="@style/background_rice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BodyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rice_old" />

            <View
                style="@style/HorizontalDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
