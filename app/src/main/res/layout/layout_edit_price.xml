                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/ed_sticky_rice_old"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/text_weight"
                        android:inputType="number"
                        android:textSize="@dimen/default_text_body_normal" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/bath"
                    android:textSize="@dimen/default_text_body_normal" />

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp" />


            <Button style="@style/style_button_save" />
        </LinearLayout>

        <LinearLayout
            style="@style/background_rice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BodyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jasmine_rice" />

            <View
                style="@style/HorizontalDivider"
